<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pay_drawable_bg_recharge_item"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bus_txt_recharge_origin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bus_txt_recharge_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pay_recharge_price"
        android:textSize="14sp" />

</LinearLayout>