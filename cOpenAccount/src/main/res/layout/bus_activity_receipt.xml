<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_app_bg_grey">

    <include
        android:id="@+id/activity_receipt_title"
        layout="@layout/common_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_red_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_receipt_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_app_bg_white"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_customer_information"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:text="@string/bus_customer_information"
                android:textColor="@color/common_323232"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_ececec"
                app:layout_constraintTop_toBottomOf="@id/tv_customer_information" />

            <TextView
                android:id="@+id/tv_clientSName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/bus_clientSName"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_customer_information" />

            <TextView
                android:id="@+id/tv_customer_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="168dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="21dp"
                android:text="@string/bus_customer_type"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_customer_information" />

            <TextView
                android:id="@+id/tv_paperwork_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:text="@string/bus_type_of_certificate"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_clientSName" />


            <TextView
                android:id="@+id/tv_id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:text="@string/bus_id_number"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_paperwork_type" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="21dp"
                android:text="@string/bus_address"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_id_number" />

            <View
                android:id="@+id/view_one"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="18.5dp"
                android:background="@color/common_ececec"
                app:layout_constraintTop_toBottomOf="@id/tv_address" />

            <TextView
                android:id="@+id/tv_business_information"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:text="@string/bus_business_information"
                android:textColor="@color/common_323232"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_one" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_ececec"
                app:layout_constraintTop_toBottomOf="@id/tv_business_information" />

            <TextView
                android:id="@+id/tv_business_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/bus_business_type"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_business_information" />

            <TextView
                android:id="@+id/tv_user_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:text="@string/bus_user_number"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_business_type" />

            <TextView
                android:id="@+id/tv_reception_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="168dp"
                android:layout_marginTop="16dp"
                android:text="@string/bus_reception_time"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_business_type" />

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:text="@string/bus_order_num"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user_number" />

            <View
                android:id="@+id/view_two"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="18.5dp"
                android:background="@color/common_ececec"
                app:layout_constraintTop_toBottomOf="@id/tv_order_num" />

            <TextView
                android:id="@+id/tv_package_information"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:text="@string/bus_package_information"
                android:textColor="@color/common_323232"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_two" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_ececec"
                app:layout_constraintTop_toBottomOf="@id/tv_package_information" />

            <TextView
                android:id="@+id/tv_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/bus_product"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_package_information" />

            <TextView
                android:id="@+id/tv_tariff_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/bus_tariff_explanation"
                android:textColor="@color/common_555555"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_product" />

            <TextView
                android:id="@+id/content_tariff_explanation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bus_border_tariff_explanation"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/common_555555"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tariff_explanation" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_red_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="9dp"
        android:text="@string/bus_friendly_tips"
        android:textColor="@color/common_red"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/bus_btn_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bus_btn_confirm"
        style="@style/common_btn_gradient_radius"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"
        android:enabled="false"
        android:text="@string/bus_open_form_agree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>