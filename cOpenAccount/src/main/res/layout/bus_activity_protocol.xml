<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_app_bg_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/title_activity_protocol"
        layout="@layout/common_common_title"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/web_protocol"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/bus_btn_confirm"
        app:layout_constraintTop_toBottomOf="@+id/title_activity_protocol" />


    <Button
        android:id="@+id/bus_btn_confirm"
        style="@style/common_btn_gradient_radius"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"
        android:enabled="false"
        android:text="@string/bus_open_form_agree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>