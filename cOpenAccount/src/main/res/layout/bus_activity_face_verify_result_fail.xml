<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_app_bg_grey"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_bg_white_radius"
                android:paddingLeft="10dp"
                android:paddingTop="16dp"
                android:paddingRight="3dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bus_icon_face_verify" />

                <TextView
                    android:id="@+id/bus_txt_face_verify_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="0"
                    android:textColor="@color/common_green"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="35dp"
                    android:text="@string/bus_face_verify_point"
                    android:textColor="@color/common_content"
                    android:textSize="12dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/common_bg_white_radius"
                android:paddingLeft="10dp"
                android:paddingTop="16dp"
                android:paddingRight="3dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bus_icon_pic_verify" />

                <TextView
                    android:id="@+id/bus_txt_face_pic_verify_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="0"
                    android:textColor="@color/common_green"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="35dp"
                    android:text="@string/bus_face_pic_verify_point"
                    android:textColor="@color/common_content"
                    android:textSize="12dp" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/bus_txt_face_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:drawableTop="@drawable/bus_icon_face_fail"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="验证失败"
            android:textColor="@color/common_red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bus_txt_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/common_tip_hint"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bus_btn_next"
            style="@style/common_btn_gradient_radius"
            android:layout_marginBottom="15dp"
            android:text="@string/bus_btn_face_verify_retry" />
    </LinearLayout>
</LinearLayout>