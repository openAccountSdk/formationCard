<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/reader_dialog_reader"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_two_leftbtn"
        android:layout_width="0dp"
        android:layout_height="42.5dp"
        android:layout_weight="1"
        android:background="@drawable/reader_dialog_btn_bottom_left_grey"
        android:text="取消"
        android:textColor="@drawable/reader_dialog_selector_txt_color_grey"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_two_rightbtn"
        android:layout_width="0dp"
        android:layout_height="42.5dp"
        android:layout_weight="1"
        android:background="@drawable/reader_dialog_btn_bottom_right_green"
        android:text="确认"
        android:textColor="@drawable/reader_dialog_selector_txt_color_green"
        android:textSize="18sp" />

</LinearLayout>