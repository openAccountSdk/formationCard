<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_layout_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/common_title_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_dialog_list_title"
        android:gravity="center"
        android:padding="13dp"
        android:text="@string/common_select_method"
        android:textColor="@color/common_green"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:background="#8dbd0f" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/common_recycler_view"
        android:layout_width="260dp"
        android:background="@color/common_app_bg_white"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/common_txt_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_dialog_list_bottom"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/common_cancel"
        android:textColor="#777777"
        android:textSize="18sp" />
</LinearLayout>