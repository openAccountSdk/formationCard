<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <gradient android:endColor="@color/ucommon_btn_end_press" android:startColor="@color/ucommon_btn_start_press" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#bcbcbc" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <gradient android:endColor="@color/ucommon_btn_end" android:startColor="@color/ucommon_btn_start" />
        </shape>
    </item>

</selector>